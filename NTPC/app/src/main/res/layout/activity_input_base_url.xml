<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/baseUrl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    tools:context=".InputBaseUrlActivity">

    <EditText
        android:id="@+id/enterUrl"

        android:singleLine="true"
        android:imeOptions="actionDone"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:background="#ffff"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter Base Url"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:text="http://ec2-54-236-56-160.compute-1.amazonaws.com/"
        android:textAlignment="center"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="254dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="303dp"
        android:layout_marginTop="70dp"
        app:srcCompat="@drawable/photo3" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="357dp"
        android:layout_height="91dp"
        android:layout_below="@+id/enterUrl"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:background="#414141"
        android:text="Enter Base URL" />

</RelativeLayout>